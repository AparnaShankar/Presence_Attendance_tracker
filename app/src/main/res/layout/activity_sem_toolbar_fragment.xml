<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/user_img"
        style="@style/avatar_toolbar"
        tools:src="@drawable/girl" />

    <LinearLayout
        android:layout_width="@dimen/dimen0"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dimen8"
        android:layout_marginRight="@dimen/dimen8"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/user_name"
            style="@style/username_toolbar"
            tools:text="@string/settings_name_default" />

        <TextView
            android:id="@+id/attendance_criteria"
            style="@style/criteria_toolbar"
            tools:text="Criteria : 75%" />

        <TextView
            android:id="@+id/toolbar_makeup"
            style="@style/makeup_toolbar"
            tools:text="No criteria set" />

    </LinearLayout>

    <TextView
        android:id="@+id/aggregate"
        style="@style/percentage_toolbar"
        tools:text="98.2%" />

</LinearLayout>




